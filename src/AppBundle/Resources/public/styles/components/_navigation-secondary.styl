.navigation-secondary
	z-index: 99;
	background-color: rgba(#000, .4);
	position: relative;
	-webkit-backface-visibility: hidden;
	backface-visibility: hidden;
	height: navigationSecondaryHeight; //TODO: obavezno jer ce se inace pomaknit ostatak contenta i nece bit poravnat s fiksnim dijelovima.
	overflow: hidden;
	width: 100%;
	nav
		position relative
		text-align: center;
		+above(bpSmall)
			white-space: normal;
			overflow: hidden;

		ul
			padding: 0;
			width: auto;
			margin: 0 auto;
			display: block;
			> li
				display: inline-block;
				width: auto;
				text-align: center;
				transition: all .3s ease;
				> a
					color: secondary-navigation-link-color;
					font-size: 14px;
					font-weight: 500;
					position: relative;
					display: inline-block;
					outline: none;
					line-height: 16px;
					text-decoration: none;
					text-transform: uppercase;
					margin: 0 (baseSpacing / 2);
					padding: 19px 0 15px 0;

					&:after
						position: absolute;
						top: 100%;
						left: 0;
						width: 100%;
						height: 1px;
						background: theme-primary;
						content: '';
						opacity: 0;
						+above(bpMedium)
							transition: height 0.3s, opacity 0.3s, transform 0.3s;
							transform: translateY(10px);
					&:hover, &:focus
						color: white;

				&.active
					> a
						font-weight: 700;
						color: white;
						&:after
							height: 5px;
							opacity: 1;
							transform: translateY(-5px);

	.navigation-secondary__slider
		+below(bpMedium)
			li.slick-slide
				>a
					color: secondary-navigation-link-color;
					font-size: 14px;
					position: relative;
					display: inline-block;
					white-space: nowrap;
					outline: none;
					text-decoration: none;
					text-transform: uppercase;
					text-shadow: 0 0 1px rgba(255, 255, 255, 0.3);
					margin: 0 (baseSpacing / 2);
					padding: 19px 0 15px 0;
					&:after
						position: absolute;
						top: 100%;
						left: 0;
						width: 100%;
						height: 1px;
						background: theme-primary;
						content: '';
						opacity: 0;
						+above(bpMedium)
							transition: height 0.3s, opacity 0.3s, transform 0.3s;
							transform: translateY(10px);
			.slick-prev, .slick-next
				opacity: 0.5;
				z-index: 90;
				margin-top: -6px;
				top: 50%;
			.slick-prev:before, .slick-next:before
				font-size: 12px;
			.slick-prev
				left: 0px;
			.slick-next
				right: 0px;
			li.active
				> a
					font-weight: 600;
					color: white;
					&:after
						height: 5px;
						opacity: 1;
						transform: translateY(-5px);


