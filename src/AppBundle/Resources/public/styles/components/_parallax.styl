.site-head
	overflow: hidden
	position: relative;
	animation: fadeIn 0.7s;
	&:after
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background-color: rgba(black, 0.25)
		content ''
		display block
		z-index: 1;
	.content
		position: relative;
		z-index 2;
		padding: 20px;
	+above(bpMedium)
		background-position: center center;
		background-repeat: no-repeat;
		background-size: cover;
		background-color: gray-10;
		display: table;
		width: 100%;
		height: 100%;
		text-align: center;
		&-content
			display: table-cell;
			vertical-align: middle;
			//position: relative;
			//width: 100%;
			//+above(bpLarge)
			//+below(bpMedium)
			//  display: block;

#bg
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 400px;
	background-repeat: no-repeat;
	background-size: cover!important;
	background-position: center center!important;
	background-attachment: fixed;
	svg
		width: 100%;
		height: 100%;
+below(bpMedium)
	.site-head
		&-content
			display: block;


