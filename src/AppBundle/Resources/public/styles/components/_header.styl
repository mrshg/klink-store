	+below(bpMedium)
		margin-left: -(moreDropdownWidth);
		ul:before
			left: 90%;

.nav-more:hover
	.more-dropdown
		display: block;
		-webkit-animation: fadeIn 0.7s;
		animation: fadeIn 0.7s;





