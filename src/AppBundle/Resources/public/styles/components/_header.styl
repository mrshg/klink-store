		color: white;
		ul
			margin: 0;
			padding: 10px 20px;
			border-top: 1px solid gray-20;
		ul > li
			border-bottom: 1px solid gray-20;
		label
			line-height: 1.2;
		&__title
			color: gray-40;
		strong
			color: white;
	+below(bpXSmall)
		display: none;

.icon-address-location
	display: inline-block;
	text-align: center;
	font-size:28px;
	+above(bpLarge)
		display: none;


.cart-summary
	float: left;
	padding: 0 30px 0 23px;
	border-left: 1px solid #535353;
	width: cartWidth;
	cursor: pointer;
	+below(headerTabletBreakpoint)
		width: auto;
	+below(bpXSmall)
		padding: 0 15px 0 15px;


.cart-summary-container
	height: headerHeight;
	display: flex;
	align-items: center;
	justify-content: space-between;
	i
		color: white;
		font-size: 22px;
		display: block;
		padding-top: 5px;
	.icon-arrow
		padding-top: 0;
		position: relative;
		width: 20px;
		height: 20px;
		color: gray-30;
		right: 0;
		top: 2px;
		+below(headerTabletBreakpoint)
			display: none;
		.line
			display: block;
			background-color: transparent;
			width: 20px;
			height: 20px;
			transition: all .3s ease;
			position: relative;
			&::after, &::before
				content: '';
				position: absolute;
				top: 50%;
				margin-top: -1px;
				display: inline-block;
				height: 2px;
				width: 15px;
				background: #fff;
				backface-visibility: hidden;
			&::before
				transform: rotate(45deg);
			&::after
				transform: rotate(-45deg);
			&::after
				transform-origin: 9px 50% 50%;
			&::before, &::after
				width: 15px;
				transform-origin: 50% 50% 50%;
				-webkit-backface-visibility: hidden;
				backface-visibility: hidden;
				transition: width 0.2s, transform 0.2s;
			&::before
				right: 9px;
			&::after
				right: 0px;


.cart-active, .cart-active-saved
	.icon-arrow
		.line
			&::before, &:after
				width: 20px;
			&::before
				transform: translateX(9px) rotate(-45deg);
			&::after
				transform: translateX(0px) rotate(45deg);
.cart-summary__value
	background-color: rgba(255,255,255,0.15);
	border-radius: 5px;
	font-size: 23px;
	color: #fff;
	line-height: 1;
	padding: 5px 22px 3px 22px;
	+below(headerTabletBreakpoint)
		display: none;


.dropdown
	display: none;
	position: absolute;
	left: 50%;
	padding-top: 7px;
	text-transform: none;
	> ul
		position: relative;
		width: 100%;
		background-color: #1e1e1e;
		border-radius: 6px;
		font-size: 12px;
		font-weight: 300;
		line-height: 24px;
		padding: 15px 0;
		&:before
			content: '';
			position: absolute;
			top: -4px;
			left: 50%;
			margin-left: -5px;
			width: 0;
			height: 0;
			border-style: solid;
			border-width: 0 5px 5px 5px;
			border-color: transparent transparent #1e1e1e transparent;

		a
			display: block;
			padding: 0 25px;
			&.dropdown__item--accent
				 color: theme-primary;
			&:hover
				color: #fff;
				background-color: rgba(#fff, 0.5);

browseDropdownWidth = 120px;
.browse-dropdown
	text-align: center;
	width: browseDropdownWidth;
	margin-left: -44px;

