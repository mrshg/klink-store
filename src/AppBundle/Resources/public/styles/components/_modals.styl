//==================
// Modals general
//==================

.modal.active
	opacity:1;

.modal
	opacity:0;
	position: relative;
	width: auto;
	max-width: 450px;
	//max-height: 500px;
	min-height: 300px;
	overflow: hidden;
	margin: 20px auto;
	text-align: center;
	form
		input, select,textarea
			&.error
				border: 1px solid theme-danger;

	.tabs__nav li
		width: 100%!important;
	.btn
		margin: 0;
	.content
		padding: 0;
	.title--lines-on-side
		background: #fff;
	.form--modal
		margin: 20px 40px;
		fieldset
			margin-bottom: baseSpacing;
	&__header
		border-radius: 4px 4px 0px 0px;
		background-color: white;
		position:relative;
		padding: 60px 40px 40px 40px;
		min-height: 40px;
		&--with-divider
			padding: (baseSpacing*2) (baseSpacing*4) baseSpacing (baseSpacing*4);
			border-bottom: 1px solid gray-40;
		p
			margin: 10px 0 0 0;
			font-size: 14px;
			color: gray-10;
		h3
			text-transform: uppercase;
			font-weight: 700;
			color: gray-10;
			margin: 0;
	&__body
		background-color: white;
		overflow: hidden;
		border-radius:0px 0px 4px 4px;
		padding: 40px 40px 40px 40px;
	&__actions
		background-color: white;
		padding: baseSpacing;
		text-align: center;
		+above(bpSmall)
			a
				margin:0 10px;
	&__footer
		padding: baseSpacing 0;
		a
			text-decoration:none;
			font-size: 14px;
		p
			font-weight: 400;
			font-size: 14px;
			a
				text-decoration: underline;

.modal__logo
	padding: 10px 0;
	text-align: center;
	i
		font-size: 40px;



