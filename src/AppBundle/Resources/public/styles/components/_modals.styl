.modal--drink-item
	.modal__body
		padding: 00px 40px 40px 40px;
	.modal
		&__title
			color: gray-10;
			text-transform: none;
			font-size: 22px;
			line-height: 1.2;
			margin: baseSpacing;
		&__header
			padding: 10px;
			text-align: right;
	.btn--favorite
		display:inline-block;
		width: 20px;
		height: 20px;
		color: gray-20;
		font-size: 20px;
		&:hover
			color: theme-primary;
		&:focus
			i:before
				color: theme-primary;
				content: 'p'!important;
	.rating
		width: 100%;
		height: 40px;
		text-align: center;
		font-size: 20px;
		i
			display: inline-block;
			&:hover
				color: theme-primary;
			&:focus
				&:before
					content: 'p'!important;
	.cart-item
		border-radius: 4px;
		border: 1px solid gray-70;
		text-align: left;

	.modal__drink-img
		img
			width: auto;
			display: block;
			margin: 0 auto;
	.drink-price
		padding: 8px 0 3px 0;
		font-size: 22px;
		line-height: 1.1;
		font-weight: 400;
		color: theme-secondary;


	.drink-pack-amount
		font-size: 12px;
		display: flex;
		flex-direction: row;
		justify-content: center;
		text-align: center;
		min-width: 50%;
		margin: 0 auto;
		button
			margin: 0;
			padding: 5px 10px;
			line-height: 1;
			color: theme-primary;
			display block;
			font-weight: 400;
			border-color: theme-primary;
			border-style: solid;
			border-width: 1px 1px 1px 0;
			&:first-child
				border-width: 1px 1px 1px 1px;
				border-radius: 4px 0 0 4px;
			&:last-child
				border-width: 1px 1px 1px 0;
				border-radius: 0 4px 4px 0;
			&.active
				color: white;
				background-color: theme-primary;
			&:only-child
				border-radius: 4px;
				border-width:1px;
				border-radius: 4px;
	.drink-pack-quantity
		text-align: center;
		height: 40px;
		overflow: hidden;
		display: flex;
		justify-content: center;
		align-items: center;
		.btn
			margin: 0;
			display: inline-block;
			text-align: center;
			padding: 0;
			color: gray-50;
			font-size: 35px;
			margin: 0 10px;
			i
				&:before
					position: relative
					top: 4px;

			&:hover
				color: gray-10;
		&__value
			margin: 0;
			padding: 0;
			color: gray-20;
			font-size: 16px;
			height: 35px;
			min-width: 40px;
			border-radius: 6px;
			font-weight: 700;
			border: 2px solid gray-50;

	.tabs__content
		padding: 0 20px 0 20px;
		font-size: 14px;
		color: gray-25;
		position: relative;
	.tabs__content-single
		padding: 0 20px;

