input, input[type="text"], input[type="email"]
  box-sizing: border-box;
  display: block;
  border: 1px solid gray-50;
  border-radius: 4px;
  background-color: white;
  padding: 15px 20px 13px 20px;
  margin-bottom: 15px;
  text-align: center;
  width: 100%;
  color: black;
  font-weight: 400;
  font-size: 14px;
  font-family: fSansBase;
  height: 50px;
  line-height: 1.3;
  transition: all 0.3s ease;
  &:hover, &:focus
    outline: none;
    border: 1px solid gray-30;
  &::-webkit-input-placeholder { color: placeholderColor; }
  &:-moz-placeholder { color: placeholderColor; }
  &::-moz-placeholder { color: placeholderColor; }
  &:-ms-input-placeholder { color: placeholderColor; }
textarea
  box-sizing: border-box;
  display: block;
  border: 1px solid gray-50;
  border-radius: 4px;
  background-color: white;
  padding: 15px 20px 13px 20px;
  margin-bottom: 15px;
  text-align: left;
  width: 100%;
  color: black;
  font-weight: 400;
  font-size: 14px;
  font-family: fSansBase;
  height: 70px;
  line-height: 1.3;
  transition: all 0.3s ease;
  resize: none;
  &:hover, &:focus
   outline: none;
   border: 1px solid gray-30;
  &::-webkit-input-placeholder { color: placeholderColor; }
  &:-moz-placeholder { color: placeholderColor; }
  &::-moz-placeholder { color: placeholderColor; }
  &:-ms-input-placeholder { color: placeholderColor; }

input[type="submit"]
  display: inline-block;
  width: auto;
  box-sizing: border-box;
  border: 0;
  margin: (baseSpacing / 2) auto;
  background-color: theme-primary;
  color: white;
  border-radius: 4px;
  font-weight: 700;
  display: block;
  line-height: 1;
  height: auto;
  &:hover
    background-color: darken(theme-primary, 10%);

select
    border: 1px solid gray-50;
    border-radius: 4px;
    box-shadow: none;
    background-color: transparent;
    width: 100%;
    line-height: 1;
    text-align: center;
    color: black;
    font-weight: 400;
    padding: 15px 20px;
    margin-bottom: (baseSpacing / 2);
    height: 50px;
    margin-bottom: 10px;
    position: relative;
    &:focus
      outline: none;

.select-custom
  position: relative;
  width: 100%;
  &:after
    content: '';
    position: absolute;
    display: block;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 7px 6.5px 0 6.5px;
    border-color: #808080 transparent transparent transparent;
    right: 22px;
    top: 50%;
    margin-top: -7px;
    opacity: 0.5;
  select
    border: 1px solid gray-50;
    border-radius: 4px;
    box-shadow: none;
    background-color: transparent;
    background-image: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
