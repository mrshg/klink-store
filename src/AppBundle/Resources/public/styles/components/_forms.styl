.form
  &__group
    display: flex;
    flex-direction: column;
    width: 100%;
    +above(bpSmall)
      flex-direction: row;
      display: flex;
      justify-content: space-between;
    input
      line-height:1;
      margin: 0;
      font-size: 14px;
      +below(bpSmall)
        width: 100%
      +above(bpSmall)
        order: 1;
      &:first-child
        display block;
        margin:0 0 10px 0;
        flex: 1;
        +above(bpSmall)
          margin:0 8px 15px 0;
      &:last-child
        flex: 1;
        margin:0 0 10px 0;
        +above(bpSmall)
          margin:0 0 15px 8px;
  &__info
    font-size: 12px;
    font-weight: 400;
    a
      text-decoration: underline;
  &__link
    text-decoration: underline;
    display: block;
    color: gray-30;
    font-size: 14px;
    &:hover
      text-decoration: none;

  &__field
    position: relative;
    .msg
      display: inline-block;
    .msg--error
      position: absolute;
      right: -20px;
      top: 49%;
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: theme-danger;
    .msg--success
      position: absolute;
      right: -20px;
      top: 49%;
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: theme-success;
    .msg:after
      opacity: 0;
      transition: all .3s ease;
      font-weight: 400;
      background: #333;
      background: rgba(0,0,0,.8);
      border-radius: 5px;
      bottom: 10px;
      color: #fff;
      font-size: 12px;
      content: attr(data-text);
      right: -0px;
      padding: baseSpacing;
      position: absolute;
      z-index: 101;
      width: 150px;
      pointer-events: none;
    .msg:hover:after
      opacity: 1;


