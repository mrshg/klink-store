<section id="modal-register" class="modal modal--register mfp-with-anim">
    <div class="content">
        <div class="modal__header">
            <h3 class="modal__title">Sign up</h3>
            {#<a href="" class="facebook-btn">Sign up with facebook</a>#}
        </div>
        {#<p class="title title--lines-on-side"><span>or</span></p>#}
        <div class="modal__body">
            <form id="form-signup" class="form form--modal" action="{{ path('_register') }}" method="post">
                <input type="text" name="fullName" placeholder="Full name" required />
                <input type="email" name="email" placeholder="Email address" required />
                <input type="tel" name="birthday" placeholder="Birthday (mm/dd/yyyy)"  id="birthday" class="date-mask" required>
                <input type="password" name="plainPassword" placeholder="Create password" required/>
                <input type="password" name="plainPassword" placeholder="Confirm Password" required/>
                <button type="submit" href="#modal-register-address" class="btn btn--primary btn--block form__submit">Continue</button>
            </form>
            <p class="form__info">To Klink you must be 21 or older and agree to the <a href="/tou" target="_blank">terms of use</a></p>
        </div>
        <div class="modal__footer">
            <p>
                Already have an account? <a href="#modal-login" class="activate-modal-link" data-effect="mfp-3d-unfold">Log in</a>
            </p>
        </div>
    </div>
</section>
