<section id="modal-add-address" class="modal modal--add-address mfp-with-anim mfp-hide">
    <div class="content">
        <div class="modal__header">
            <h3 class="modal__title">Add new address</h3>
        </div>
        <div class="modal__body">
            <form action="" class="form form--modal" method="post" id="new-address-form">
                <input type="text" name="addressLine1" placeholder="Address line 1" required/>
                <input type="text" name="addressLine2" placeholder="Address line 2"  />
                <select name="administrativeArea" class="administrativeArea" required>
                </select>
                <input type="text" name="locality" placeholder="City" required/>
                <input type="text" name="postalCode" placeholder="ZIP" required/>
                <input type="hidden" name="countryCode" value="US" />
                {# todo enable when api ready #}
                {#<input type="text" placeholder="Enter a name for the address(optional)"/>#}
                {#<textarea rows="2" placeholder="Special instructions: gate, code, alt, phone number, etc. (optional)"></textarea>#}
                <div class="modal__actions">
                    <div class="btn-group">
                        <a href="#" class="btn btn--info" onclick="$.magnificPopup.close();" style="margin-bottom: 10px;">Cancel</a>
                        <button class="btn btn--primary" type="submit" id="new-address" style="margin-bottom: 10px;">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
