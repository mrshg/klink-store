<section id="modal-password" class="modal modal--password mfp-with-anim mfp-hide">
    <div class="content">
        <div class="modal__header">
            <h3 class="modal__title">Forgot your password?</h3>
        </div>
        <div class="modal__body">
            <form class="form form--modal" name="forgot-password" id="forgot-password" action="">
                <input type="email" name="email" placeholder="Enter your email address" required />
                <input type="submit" value="Email password reset link"/>
            </form>
        </div>
        <div class="modal__actions">

        </div>
        <div class="modal__footer">
            <p>
                <a href="#modal-login" class="activate-modal-link" data-effect="mfp-3d-unfold">Back to Log In</a> or
                <a href="#modal-register" class="activate-modal-link" data-effect="mfp-3d-unfold">Make an account</a>
            </p>
        </div>
    </div>
</section>
