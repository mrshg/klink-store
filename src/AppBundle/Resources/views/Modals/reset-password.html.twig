<section id="modal-reset-password" class="modal modal--rest-password mfp-with-anim mfp-hide">
    <div class="content">
        <div class="modal__header">
            <h3 class="modal__title">Reset your password</h3>
        </div>
        <div class="modal__body">
            <div class="messages">Pin for resetting password has been sent to your email.</div>
            <form class="form form--modal" name="reset-password" id="reset-password" action="">
                <input type="text" name="pin" placeholder="Enter pin received in email" required />
                <input type="password" name="password" placeholder="New password"  required/>
                <input type="password" name="passwordConfirmation" placeholder="New password confirmation" required />
                <input type="submit" value="Email password reset link" />
            </form>
        </div>
        <div class="modal__footer">
            <p>
                <a href="#modal-login" class="activate-modal-link" data-effect="mfp-3d-unfold">Back to Log In</a> or
                <a href="#modal-register" class="activate-modal-link" data-effect="mfp-3d-unfold">Make an account</a>
            </p>
        </div>
    </div>
</section>
