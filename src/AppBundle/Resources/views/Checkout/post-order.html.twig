<div class="page page--post-order">

    <div class="page-actions page-actions--post-order">
        <div class="info-msg">
            <i class="icon" data-icon="i"></i>
            <p>Your order is on the way!</p>
        </div>
    </div>

    <div class="box">
        <div class="wrapper">
            <div class="content">
                <div class="box__header">
                    <h2 class="box__header-title">While you wait</h2>
                </div>
                <div class="box__body">
                    <div class="box-item post-order-img-blur1">
                        <div class="box-item__data" >
                            <div class="blured-img" style="background-image: url('{{ asset('assets/dist/img/cheers.png') }}')">
                                <img src="{{ asset('assets/dist/img/cheers.png') }}">
                            </div>
                            <div class="blur-bg blur-bg1"></div>

                            <div class="box-item__actions">
                                <div class="center">
                                    <p class="title">Connect with us</p>
                                    <a href="https://facebook.com/klinkdelivery" target="_blank" class="icon-facebook"><span>Facebook</span></a>
                                    <a href="https://twitter.com/klinkdelivery" target="_blank" class="icon-twitter"><span>Twitter</span></a>
                                    <a href="http://instagram.com/klink_delivery" target="_blank" class="icon-instagram"><span>Instagram</span></a>
                                    <a href="http://www.pinterest.com/Klinkdelivery" target="_blank" class="icon-pinterest"><span>Pinterest</span></a>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="box-item post-order-img-blur2">
                        <div class="box-item__data">
                            <div class="blured-img" style="background-image: url('{{ asset('assets/dist/img/phone.png') }}')">
                                <img src="{{ asset('assets/dist/img/phone.png') }}">
                            </div>
                            <div class="blur-bg blur-bg2"></div>
                            <div class="box-item__actions">
                                <div class="center">
                                    <p class="title">Download the app</p>
                                    <a href="/ios" target="_blank" class="icon-appstore"><span>App Store</span></a>
                                    <a href="/android" target="_blank" class="icon-googleplay"><span>Google Play</span></a>
                                </div>
                            </div>
                        </div>

                    </div>


                    <div class="box-item post-order-img-blur3">
                        <div class="box-item__data">
                            <div class="blured-img" style="background-image: url('{{ asset('assets/dist/img/pub.png') }}')">
                                <img src="{{ asset('assets/dist/img/pub.png') }}">
                            </div>
                            <div class="blur-bg blur-bg3"></div>
                            <div class="box-item__actions">
                                <div class="center">
                                    <p class="title">Need help?</p>
                                    <p><a href="emailto:hello@klinkdelivery.com">hello@klinkdelivery.com</a></p>
                                    <p><a href="tel:8772364041">(877) 236-4041</a></p>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
                <div class="box__footer">
                    <a href="/" class="btn btn--gray-hasborder">Klink Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
  $(document).ready(function () {

    var bgImage1 = $('.post-order-img-blur1').find('img').first().attr('src');
    $('.blur-bg1').backgroundBlur({
        imageURL : bgImage1,
        blurAmount : 2
      });

    var bgImage2 = $('.post-order-img-blur2').find('img').first().attr('src');
    $('.blur-bg2').backgroundBlur({
        imageURL : bgImage2,
        blurAmount : 5
      });

    var bgImage3 = $('.post-order-img-blur3').find('img').first().attr('src');
    $('.blur-bg3').backgroundBlur({
        imageURL : bgImage3 ,
        blurAmount : 5
      });
});
</script>

