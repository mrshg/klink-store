{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="page page--single-host-collection">
    {% include 'AppBundle:_Includes:navigation-secondary.html.twig' %}
        {#todo enable when get single collection api is ready#}
        {% include 'AppBundle:SingleCollection:_collections-hero.html.twig' %}
        <div class="page__content">
            <div class="box">
                <div class="wrapper">
                    <div class="content">
                        <div class="box__list">
                            {% if packs is defined %}
                                {% for pack in packs %}
                                    {% include 'AppBundle:SingleCollection:_pack_item.html.twig' %}
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $('.collections-hero').ready(function(){
            var $subtitle = $('.collections-hero__subtitle');
            $subtitle.html($subtitle.html().replace(/\n/g, "<br />"));
            $('.collections-hero__subtitle').show();
        });
    </script>
{% endblock body %}
